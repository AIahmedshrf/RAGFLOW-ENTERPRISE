# صورة RAGFlow
RAGFLOW_IMAGE=infiniflow/ragflow:v0.21.1-slim

# ملف التعريف النشط (cpu أو gpu)
COMPOSE_PROFILES=cpu

# منافذ ربط واجهة RAGFlow الداخلية (ثابتة داخل الحاوية)
SVR_HTTP_PORT=9380
ADMIN_SVR_HTTP_PORT=9381
SVR_MCP_PORT=9382

# حدود الذاكرة للخدمات التي تتطلب mem_limit
MEM_LIMIT=2g

# Elastic/OpenSearch/Redis/MySQL/MinIO
STACK_VERSION=8.11.3
ES_PORT=1200
OS_PORT=9201
REDIS_PORT=6379
MYSQL_PORT=5455
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# كلمات المرور
ELASTIC_PASSWORD=ragflow_es_password123
OPENSEARCH_PASSWORD=ragflow_os_ChangeMe_!23
MYSQL_PASSWORD=ragflow_root_ChangeMe_!23
MYSQL_ROOT_PASSWORD=ragflow_root_ChangeMe_!23
MINIO_USER=rag_flow
MINIO_PASSWORD=ragflow_minio_ChangeMe_!23

# Redis
REDIS_PASSWORD=ragflow_redis_ChangeMe_123

# مسار كاش/نماذج هاغينغ فيس على المضيف
